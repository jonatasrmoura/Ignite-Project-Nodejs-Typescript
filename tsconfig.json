{
  "compilerOptions": {
    "target": "es2016", 
    "module": "commonjs",
    "rootDir": "./", 
    "baseUrl": "./src", 
    "paths": {
      "@modules/*": ["modules/*"],
      "@config/*": ["config/*"],
      "@shared/*": ["shared/*"],
      "@errors/*": ["errors/*"],
      "@database/*": ["database/*"],
      "@utils/*": ["utils/*"]
    }, 
    "esModuleInterop": true,
    
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  }
}
